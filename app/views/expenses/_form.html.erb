<%= form_with(model: expense, local: true) do |form| %>
  <div class="header-expense w-100 bg-main d-flex align-items-center">
    <div class="primero">
      <%= link_to expenses_path, class:'link' do %>
        <i class="fas fa-arrow-left text-light"></i>
      <% end %>
    </div>
    <div class="d-flex text-center flex-column pt-2">
      <h4 class="expense-title text-casual-bold text-uppercase text-light">New</h4>
      <h4 class="expense-title text-casual-bold text-uppercase text-light">Expense</h4>
    </div>
    <div class="actions">
    </div>
  </div>
   <%= form_error_user(expense) %>

  <div class="field input-signup">
    <%= form.collection_select :group_id, Group.all, :id, :name, include_blank: 'None', prompt: 'Select group' %>
  </div>

  <div class="field input-signup">
    <%= form.text_field :name, class: 'input-tag', placeholder: 'Title' %>
  </div>

  <div class="field input-signup">
    <%= form.text_field :amount, class: 'input-tag', placeholder: 'Amount' %>
  </div>

  <div class="bottom_container-big w-100 position-fixed fixed-bottom bg-second">
    <div class="w-100 border border-light d-flex mt-2 align-items-center text-center">
      <%= form.submit "Create", class:"w-100 border text-uppercase bg-second text-light border-light d-flex align-items-center border-none text-center" %>
    </div>
  </div>
<% end %>
