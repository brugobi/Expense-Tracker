<div class="header-expense w-100 bg-main d-flex align-items-center">
  <div class="primero">
    <%= link_to months_index_path, class:'link' do %>
      <i class="fas fa-arrow-left text-light"></i>
    <% end %>
  </div>
  <div class="d-flex text-center flex-column pt-2">
    <h4 class="expense-title text-casual-bold text-uppercase text-light">February</h4>
  </div>
  <div class="actions">
  </div>
</div>
<div class="total_big-container d-flex align-items-center pt-3 pb-3 bg-light justify-content-between">
  <div class="total_title-container">
    <p class="text-casual-bold text-size">Total</p>
  </div>
  <div class="total_title-container">
    <p class="text-casual-bold text-size">$<%= @total %></p>
  </div>
</div>
<div class="total_big-container d-flex align-items-center pt-3 pb-3 bg-light justify-content-between">
  <div class="total_title-container-half">
    <p class="text-casual-bold text-size-small text-size">Spend per day:</p>
  </div>
  <div class="total_title-container">
    <p class="text-casual-bold text-size-small text-size">$<%= @average.round(2) %></p>
  </div>
</div>
<div class="total_big-container d-flex align-items-center pt-3 pb-3 bg-light justify-content-between">
  <div class="total_title-container-half">
    <p class="text-casual-bold text-size-small text-size">You spent most on:</p>
  </div>
  <div class="total_title-container">
    <p class="text-casual-bold text-size-small text-size"><%= @pop %></p>
  </div>
</div>
<div class="total_big-container d-flex align-items-center pt-3 pb-3 bg-light justify-content-between">
  <div class="total_title-container-half">
    <p class="text-casual-bold text-size-small text-size">Most expensive article:</p>
  </div>
  <div class="total_title-container text-center">
    <p class="text-casual-bold text-size-small text-size"><%= @article %></p>
  </div>
</div>
<div class="pb-5 mb-5">
<% @august.each do |expense| %>
  <%= link_to expense, class:'link' do %>
    <div class="expense_big-container d-flex align-items-center bg-light mt-3">
      <div class="expense_big-image p-2">
        <%if expense.group %>
          <% if expense.group.icon.attached? %>
            <img src="<%=(url_for(expense.group.icon))%>" class="w-80">
          <% else %>
            <img src="https://bulma.io/images/placeholders/128x128.png" class="w-80">
          <% end %>
        <% else %>
            <img src="https://bulma.io/images/placeholders/128x128.png" class="w-80">
        <% end %>
      </div>
      <div class="expense_big-titles p-2 d-flex flex-column w-60">
        <div class="expenses-titles d-flex justify-content-between">
          <p class="text-size text-casual-bold pr-3"><%= expense.name %></p>
          <p class="text-size text-casual-bold pr-3">$<%= expense.amount %></p>
        </div>
        <div class="expenses-titles d-flex justify-content-between">
          <p class="text-size-small text-muted text-casual-bold pr-3"><%= current_user.name %></p>
          <p class="text-size-small text-muted text-casual-bold pr-3"><%= current_user.created_at.strftime('%B %d, %Y') %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
