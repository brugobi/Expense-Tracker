<%= stylesheet_link_tag 'users', media: 'all' %>
<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>
<div class="userpage_big-cont d-flex flex-column justify-content-between">
  <div class="userpage_header-cont d-flex flex-column align-items-center justify-content-center">
    <div class="header_avatar">
      <% if @user.avatar.attached? %>
        <img src="<%=(url_for(@user.avatar))%>" class="header_avatar-image">
      <% else %>
        <img src="https://bulma.io/images/placeholders/128x128.png" class="header_avatar-image">
      <% end %>
    </div>
    <div class="header_avatar-text text-center mb-3">
      <h3 class="text-light"><%= @user.name%></h3>
      <p class="text-dark text-casual">@<%= @user.username%></p>
    </div>
  </div>
  <% @groups.each do |group| %>
    <div class="userpage_cat-cont d-flex flex-column">
      <div class="user_cat-cont d-flex align-items-center">
        <div class="user_cat-logocont-group">
          <% if group.icon.attached? %>
            <div class="circle-logo-group text-light" style="background: url(<%= url_for(group.icon) %>); background-size: cover;">
            </div>
          <% else %>
            <div class="circle-logo-group text-light" style="background: url(https://bulma.io/images/placeholders/128x128.png); background-size: cover;">
            </div>
          <% end %>
        </div>
        <div class="user_cat-textcont text-light">
          <%= link_to group_path(group), class:'link text-center text-light text-size' do %>
          <div class="d-flex flex-column text-center">
            <p class="link text-light text-casual-bold text-size-small"><%= group.name %></p>
            <p class="link text-light text-casual-bold text-size-small"><%= group.created_at.strftime('%B %d, %Y') %></p>
          </div>
          <% end %>
        </div>
    </div>
  <%end%>
  <div class="w-100 bg-info d-flex mt-2 align-items-center text-center">
    <%= link_to 'Log out', logout_path, method: :delete, class:"text-uppercase mt-2 mb-2 text-light mx-auto link" %>
  </div>
</div>


