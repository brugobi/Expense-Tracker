<%= form_with(model: group, local: true) do |form| %>
  <div class="header-expense w-100 bg-main d-flex align-items-center">
    <div class="primero">
      <%= link_to groups_path, class:'link' do %>
        <i class="fas fa-arrow-left text-light"></i>
      <% end %>
    </div>
    <div class="d-flex text-center flex-column pt-2">
      <h4 class="expense-title text-casual-bold text-uppercase text-light">New</h4>
      <h4 class="expense-title text-casual-bold text-uppercase text-light">Group</h4>
    </div>
    <div class="actions">
    </div>
  </div>
  <%= form_error_user(group) %>

  <div class="file_real-cont d-flex align-items-center">
    <div class="file_image-cont">
      <img src="https://www.kindpng.com/picc/m/285-2855863_a-festival-celebrating-tractors-round-profile-picture-placeholder.png">
    </div>
    <div class="file_text-cont">
      <span>Upload group's picture</span>
    </div>
    <div class="field input-avatar">
      <%= form.file_field :icon, class: 'file-button' %>
    </div>
  </div>

  <div class="field input-signup">
    <%= form.text_field :name, class: 'input-tag', placeholder: 'Title' %>
  </div>

  <div class="bottom_container-big w-100 position-fixed fixed-bottom bg-second">
    <div class="w-100 border border-light d-flex mt-2 align-items-center text-center">
      <%= form.submit "Create", class:"w-100 border border-light d-flex align-items-center border-none text-center" %>
    </div>
  </div>
<% end %>
